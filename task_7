#include <ctime>

void meteo(double* days, const int count);

int main()
{
    const int DAYS = 31;
    double days[DAYS] {};
    meteo(days, DAYS);
    for(/*проверка на дни*/)
    return 0;
}

void meteo(double *days, const int count)
{
    srand(static_cast<unsigned int>(time(0)));
    for(int i = 0; i < count; ++i)
        days[i] = rand() % 50 - rand() % 100;
}
